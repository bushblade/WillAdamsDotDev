---
const pathname = new URL(Astro.request.url).pathname
const currentPath = pathname.slice(1)

const links = ['about', 'articles', 'projects', 'uses']
---

<nav class=''>
  <ul class=''>
    <li class='inline-flex mx-1'>
      <a
        class={`capitalize btn btn-ghost ${
          currentPath === ''
            ? 'btn-outline hover:bg-transparent hover:text-current'
            : ''
        }`}
        href='/'>home</a
      >
    </li>{
      links.map((link) => (
        <li class='inline-flex mx-1'>
          <a
            class={`capitalize btn btn-ghost ${
              currentPath === link
                ? 'btn-outline hover:bg-transparent hover:text-current'
                : ''
            }`}
            href={`/${link}`}
          >
            {link}
          </a>
        </li>
      ))
    }
  </ul>
</nav>
