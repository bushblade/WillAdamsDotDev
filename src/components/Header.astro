---
import Navbar from './Navbar.astro'
---

<header class='max-w-4xl grid m-auto grid-cols-1 grid-rows-2 lg:p-0 p-4 mb-14'>
  <div class='flex py-5 px-1 justify-end'>
    <a href='/' class='flex items-center'>
      <img
        width='52px'
        height='52px'
        class='rounded-full border-2 border-accent mx-2'
        src='https://res.cloudinary.com/bushblade/image/upload/c_scale,h_50,w_50/f_webp/bushbladedotdev/profile.jpg'
        alt='Will Adams'
      />
      <span
        class='font-bold text-3xl text-transparent bg-clip-text bg-gradient-to-r from-primary to-accent'
      >
        WillAdamsDotDev</span
      >
    </a>
  </div>
  <Navbar />
</header>

<style>
  span {
    background-size: 400%;
    animation: bgmove 8s ease infinite;
  }

  @keyframes bgmove {
    0% {
      background-position: 0 50%;
    }
    50% {
      background-position: 100% 50%;
    }
    100% {
      background-position: 0 50%;
    }
  }
</style>
