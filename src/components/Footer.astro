---
import Github from '../icons/github.astro'
import Gitlab from '../icons/gitlab.astro'
import Twitter from '../icons/twitter.astro'
import Instagram from '../icons/instagram.astro'
import Telegram from '../icons/telegram.astro'
import Email from '../icons/email.astro'
import Kofi from '../icons/kofiLogo.astro'
---

<footer class='max-w-4xl m-auto py-20 flex flex-col items-center'>
  <ul class='flex flex-wrap justify-around'>
    <li
      class='inline-flex mx-1 sm:mx-2 tooltip tooltip-top tooltip-info'
      data-tip='Github'
    >
      <a
        target='_blank'
        aria-label='Link to Github profile'
        class='link-hover hover:animate-pulse'
        href='https://github.com/bushblade'><Github /></a
      >
    </li>
    <li
      class='inline-flex mx-1 sm:mx-2 tooltip tooltip-top tooltip-info'
      data-tip='Gitlab'
    >
      <a
        target='_blank'
        aria-label='Link to Gitlab profile'
        class='link-hover hover:animate-pulse'
        href='https://gitlab.com/bushblade'><Gitlab /></a
      >
    </li>
    <li
      class='inline-flex mx-1 sm:mx-2 tooltip tooltip-top tooltip-info'
      data-tip='Twitter'
    >
      <a
        target='_blank'
        aria-label='Link to Twitter profile'
        class='link-hover hover:animate-pulse'
        href='https://twitter.com/Bushblade'><Twitter /></a
      >
    </li>
    <li
      class='inline-flex mx-1 sm:mx-2 tooltip tooltip-top tooltip-info'
      data-tip='Instagram'
    >
      <a
        target='_blank'
        aria-label='Link to Instagram profile'
        class='link-hover hover:animate-pulse'
        href='https://www.instagram.com/bushblade/'><Instagram /></a
      >
    </li>
    <li
      class='inline-flex mx-1 sm:mx-2 tooltip tooltip-top tooltip-info'
      data-tip='Telegram'
    >
      <a
        target='_blank'
        aria-label='Contact me on Telegram'
        class='link-hover hover:animate-pulse'
        href='https://t.me/bushblade'><Telegram /></a
      >
    </li>
    <li
      class='inline-flex mx-1 sm:mx-2 tooltip tooltip-top tooltip-info'
      data-tip='Email me'
    >
      <a
        target='_blank'
        aria-label='Email me'
        class='link-hover hover:animate-pulse'
        href='mailto:bushblade@gmail.com'
      >
        <Email />
      </a>
    </li>
    <li
      class='inline-flex mx-1 sm:mx-2 tooltip tooltip-top tooltip-info'
      data-tip='Buy me a coffee'
    >
      <a
        target='_blank'
        aria-label='Buy me a coffee'
        class='link-hover hover:animate-pulse'
        href='https://ko-fi.com/willadams'
      >
        <Kofi />
      </a>
    </li>
  </ul>
  <p class='mt-16 text-xs'>
    All content &copy; {new Date().getFullYear()} Will Adams
  </p>
  <p class='text-xs'>
    Icons (mostly!) by <a
      href='https://openmoji.org/'
      target='_blank'
      class='link link-info'>Open Emoji</a
    >
  </p>
</footer>
