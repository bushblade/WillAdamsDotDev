---
import Footer from '@components/Footer.astro'
import Header from '@components/Header.astro'

export interface Props {
  title: string
  metaDescription?: string
  metaImage?: string
}

const { title, metaDescription, metaImage } = Astro.props
---

<!DOCTYPE html>
<html lang='en' class='scroll-smooth'>
  <head>
    <meta charset='UTF-8' />
    <meta name='viewport' content='width=device-width' />
    <meta property='og:title' content={title} />
    <meta
      property='og:description'
      content={metaDescription
        ? metaDescription
        : 'UK based developer and knife maker'}
    />
    <meta
      name='description'
      content={metaDescription
        ? metaDescription
        : 'UK based developer and knife maker'}
    />
    <meta
      property='og:image'
      content={metaImage
        ? metaImage
        : 'https://res.cloudinary.com/bushblade/image/upload/f_webp/q_auto/bushbladedotdev/ogimage.jpg'}
    />
    <link rel='icon' type='image/svg+xml' href='/favicon.svg' />
    <link rel='preconnect' href='https://fonts.googleapis.com' />
    <link rel='preconnect' href='https://fonts.gstatic.com' crossorigin />
    <link
      href='https://fonts.googleapis.com/css2?family=Fira+Mono:wght@400;500;700&display=swap'
      rel='stylesheet'
    />
    <meta name='generator' content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class='min-h-screen font-fira'>
    <Header />
    <main
      class='max-w-4xl grid m-auto prose prose-a:link-accent prose-img:rounded lg:p-0 p-4 min-h-[30vh]'
    >
      <slot />
    </main>
    <Footer />
  </body>
</html>
