---
import Layout from './Layout.astro'

export interface PostFrontmatter {
  title: string
  pubDate: string
  description: string
  author: string
  image: {
    url: string
    alt: string
  }
  tags: string[]
}

interface Props {
  frontmatter: PostFrontmatter
}

const { frontmatter } = Astro.props
---

<Layout
  title={frontmatter.title}
  metaDescription={frontmatter.description}
  metaImage={frontmatter.image.url}
>
  <div class='prose-a:link-accent prose-img:rounded'>
    <slot />
  </div>
</Layout>
